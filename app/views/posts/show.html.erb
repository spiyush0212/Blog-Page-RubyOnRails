<%= content_for :page_title, @post.title %>
<%= content_for :page_subtitle, "This page displays the full blog" %>


<section class="section">
    <div class="container">

    <!-- Main container -->
    <nav class="level">

        <!-- Left side -->
        <div class="level-left">
            <div class="level-item">
            <p class="subtitle is-5">
            <strong>Content</strong>
            </p>
            </div>
        </div>

        <!-- Right side -->
        <div class="level-right">
            <p class="level-item">
                <%= link_to "Edit", edit_post_path(@post), class: "button is-danger" %>
            </p>
            <p class="level-item">
                <!-- TODO: Add rails finctionality -->
                <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-danger" %> 
            </p>
        </div>
    </nav>
    <hr>

        <div class="content">
            <%= @post.content %>
        </div>

    </div>
</section>

<section class="comments"></section>
