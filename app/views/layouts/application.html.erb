<!DOCTYPE html>
<html>
  <head>
    <title>BLOGSTER</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <section class="hero is-info is-medium is-bold">

  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar is-fixed-top is-dark">
      <div class="container">

        <div class="navbar-brand">
          <%= link_to 'BLOGSTER', root_path, class: "navbar-item" %>
          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>

        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">

            <%= link_to 'Home', root_path, class: "navbar-item" %>

            <a href="https://www.linkedin.com/in/piyush0212" class="navbar-item">
              Contact Me
            </a>
          
            <%= link_to "Create new post", new_post_path, class: "navbar-item" %>

          </div>
        </div>

      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      
      <h1 class="title">
        <%= yield :page_title %>
      </h1>
      <h2 class="subtitle">
        <%= yield :page_subtitle %>
      </h2>

    </div>
  </div>

  </section>

    <%= yield %>
  </body>
</html>
